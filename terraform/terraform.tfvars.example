# =============================================================================
# Terraform 変数ファイル（サンプル）
# =============================================================================
# 使用方法:
#   1. このファイルを terraform.tfvars にコピー
#   2. 実際の値を設定
#   3. terraform plan / apply を実行
#
# コピーコマンド:
#   cp terraform.tfvars.example terraform.tfvars
# =============================================================================

# -----------------------------------------------------------------------------
# 基本設定
# -----------------------------------------------------------------------------

# AWSリージョン
aws_region = "us-east-1"

# プロジェクト名（リソース名のプレフィックス）
project_name = "strands-doc-summarizer"

# 環境名
environment = "dev"

# -----------------------------------------------------------------------------
# AgentCore設定
# -----------------------------------------------------------------------------

# Bedrockモデル（Claude Haiku 4.5）
bedrock_model_id = "us.anthropic.claude-3-5-haiku-20241022-v1:0"

# AgentCoreMemoryイベントの有効期限（日数: 7〜365）
memory_event_expiry_days = 30

# -----------------------------------------------------------------------------
# Lambda設定
# -----------------------------------------------------------------------------

# タイムアウト（秒）
lambda_timeout = 30

# メモリサイズ（MB）
lambda_memory_size = 256

# -----------------------------------------------------------------------------
# AgentCore Runtime設定
# -----------------------------------------------------------------------------

# タイムアウト（秒）
agentcore_runtime_timeout = 120

# メモリサイズ（MB）
agentcore_runtime_memory = 512

# -----------------------------------------------------------------------------
# S3設定
# -----------------------------------------------------------------------------

# バケット名（空の場合は自動生成）
s3_bucket_name = ""

# バージョニング有効化
s3_versioning_enabled = true

# -----------------------------------------------------------------------------
# ECR設定
# -----------------------------------------------------------------------------

# リポジトリ名（空の場合は自動生成）
ecr_repository_name = ""

# イメージタグ
ecr_image_tag = "latest"

# -----------------------------------------------------------------------------
# ネットワーク設定（オプション - プライベートネットワーク使用時のみ）
# -----------------------------------------------------------------------------

# VPC ID（空の場合はパブリックネットワーク）
# vpc_id = "vpc-xxxxxxxxx"

# サブネットID一覧
# subnet_ids = ["subnet-aaa", "subnet-bbb"]
